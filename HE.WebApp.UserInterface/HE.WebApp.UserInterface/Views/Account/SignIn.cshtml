@using HE.WebApp.UserInterface.Models;
@model SigninViewModel
@{
    ViewBag.Title = "Sign In";
}
<br />
<br />
<br />
<br />
<br />
<h2 align="center" class="text-blackbold font-weight: bold">Welcome to Homemade Eats</h2>
<br />
<br />
<div class="row">
    <div class="form-horizontal " align="center">
        <section id="loginForm">
            @using (Html.BeginForm("Signin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @*<h4>Use a local account to log in.</h4>*@
                @*<hr />*@
                @Html.ValidationSummary(true, "", new { @class = "text-blackbold" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "sr-only" }) @*sr-only hides a label*@
                    <div>
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control transparency1", @placeholder = "Enter Email Address" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-blackbold" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label sr-only" })
                    <div>
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control transparency1", @placeholder = "Enter Password" } })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-blackbold" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        @Html.EditorFor(m => m.RememberMe, new { @class = "transparency1" })
                        @Html.LabelFor(m => m.RememberMe, new { @class = "control-label text-blackbold" })
                    </div>

                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" value="Sign in" class="btn btn-primary btn-block" />
                        @*<div>
                                <section id="socialLoginForm">
                                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                                </section>
                            </div>*@
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
        <div>
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}