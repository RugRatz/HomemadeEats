@model HE.WebApp.UserInterface.Models.MealTypeModels
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_HomemadeEatsLayout.cshtml";
}

<h2>Welcome</h2>

<div id="welcomeScreen">
    <div  class="text-center">
        <h3>HOMEMADE EATS [LOGO]</h3>
        <h1><p class="text-blackbold">We love homemade food!</p></h1>
        <br>
    </div>
    <div class="container-fluid text-center">
        @*<div class="row text-center">*@
        @{ 
            // If there are existing meal types in the DB, loop through the list to display it on the screen
            if (Model.mealTypeViewList.MealTypesItemList.Count() > 0)
            {
                var imgSrc = "";
                foreach (var mealType in Model.mealTypeViewList.MealTypesItemList)
                {
                    var name = mealType.Name;
                    if (mealType.ImageFilePath != null)
                    {
                        imgSrc = mealType.ImageFilePath;
                    }
                    else
                    {
                        imgSrc = "/Content/Images/noImageAvailable2.jpg";
                    }
                    <div class="col-md-4 divStyle">
                        <a href=@name class="btn btn-default btn-lg" role="button">
                            <img src="@imgSrc" class="img-responsive"  style="width:255px; height:255px">
                            <br />
                            <p class="calligraphic-font">@name</p>
                        </a>
                    </div>
                }
            }
        }

        @*@Html.Partial("_CreatePartial")*@

